<UserControl x:Class="iCos5BACnetScheduleRT.View.Control.ScheduleElement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:converter="clr-namespace:iCos5BACnetScheduleRT.View.Converter"
             mc:Ignorable="d"
             x:Name="thisControl"
             d:DesignHeight="400" d:DesignWidth="200">

  <!-- Resources -->
  <UserControl.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="../../Assets/ControlResources.xaml"/>
      </ResourceDictionary.MergedDictionaries>

      <!-- Storyboard -->
      <Storyboard x:Key="BlinkSelectedArrow">
        <DoubleAnimation Storyboard.TargetName="NormalCursorArrow"
                         Storyboard.TargetProperty="Opacity"
                         From="0" To="1"
                         AutoReverse="True"
                         RepeatBehavior="Forever"
                         Duration="0:0:0.5"/>
        <DoubleAnimation Storyboard.TargetName="AbnormalCursorArrow"
                         Storyboard.TargetProperty="Opacity"
                         From="0" To="1"
                         AutoReverse="True"
                         RepeatBehavior="Forever"
                         Duration="0:0:0.5"/>
      </Storyboard>
    </ResourceDictionary>
  </UserControl.Resources>

  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="1*"/>
      <ColumnDefinition Width="9*"/>
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="{Binding StartItem.Time, Mode=OneWay, Converter={converter:StartTimePos}}"/>
      <RowDefinition>
        <RowDefinition.Height>
          <MultiBinding Converter="{converter:StopTimePos}"
                        Mode="OneWay">
            <Binding Path="StartItem.Time"/>
            <Binding Path="StopItem.Time"/>
          </MultiBinding>
        </RowDefinition.Height>
      </RowDefinition>
      <RowDefinition Height="{Binding StopItem.Time, Mode=OneWay, Converter={converter:RestTimePos}}"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <!-- Normal Marker -->
    <Border Grid.Column="0" Grid.Row="1"
            Visibility="{Binding Visibility, Mode=OneWay, ElementName=NormalBorder}">
      <Image x:Name="NormalCursorArrow"
             Margin="0 -20 0 -20"
             Source="{StaticResource forward_fillR}"/>
    </Border>

    <!-- Normal Panel -->
    <Border x:Name="NormalBorder"
            Grid.Column="1" Grid.Row="1"
            VerticalAlignment="Stretch"
            BorderThickness="1"
            BorderBrush="#009966"
            Background="{Binding IsSelected, Mode=OneWay, ElementName=thisControl, Converter={converter:SelectedNormalBackground}}"
            ToolTipService.InitialShowDelay="0"
            ToolTipService.BetweenShowDelay="0"
            MouseMove="NormalBorder_MouseMove" 
            MouseDown="Border_MouseDown">
      <Border.Visibility>
        <MultiBinding Converter="{converter:NormalTagVisibility}"
                      Mode="OneWay">
          <Binding Path="StartItem.Time"/>
          <Binding Path="StopItem.Time"/>
        </MultiBinding>
      </Border.Visibility>
      <Border.ToolTip>
        <ToolTip x:Name="NormalTooltip"
                 BorderBrush="YellowGreen"
                 BorderThickness="1">
          <ToolTip.Content>
            <MultiBinding Converter="{converter:DateRangeText}"
                          Mode="OneWay">
              <Binding Path="StartItem.Time"/>
              <Binding Path="StopItem.Time"/>
            </MultiBinding>
          </ToolTip.Content>
        </ToolTip>
      </Border.ToolTip>      
      <Canvas>
        <TextBlock x:Name="NormalBorderText" 
                   Foreground="Black"
                   Background="Transparent"
                   Margin="0 2 0 0">
          <TextBlock.Text>
            <MultiBinding Converter="{converter:DateRangeText}"
                          Mode="OneWay">
              <Binding Path="StartItem.Time"/>
              <Binding Path="StopItem.Time"/>
            </MultiBinding>
          </TextBlock.Text>
        </TextBlock>
      </Canvas>
    </Border>

    <!-- Abnormal Marker -->
    <Border Grid.Column="0" Grid.Row="1"
            Height="24"
            VerticalAlignment="{Binding VerticalAlignment, Mode=OneWay, ElementName=AbnormalBorder}"
            Visibility="{Binding Visibility, Mode=OneWay, ElementName=AbnormalBorder}">
      <Image x:Name="AbnormalCursorArrow"
             Source="{StaticResource forwardR}"/>
    </Border>

    <!-- Abnormal Panel -->
    <Border x:Name="AbnormalBorder"
            Grid.Column="1" Grid.Row="1"
            Height="24"
            VerticalAlignment="{Binding StartItem.Time, Mode=OneWay, Converter={converter:AbnormalBindingPosition}}"
            BorderThickness="1"
            BorderBrush="#FF9900"
            Background="{Binding IsSelected, Mode=OneWay, ElementName=thisControl, Converter={converter:SelectedAbnormalBackground}}"
            ToolTipService.InitialShowDelay="0"
            ToolTipService.BetweenShowDelay="0"
            Visibility="{Binding Visibility, Mode=OneWay, ElementName=NormalBorder, Converter={converter:InvertVisibility}}"
            MouseMove="AbnormalBorder_MouseMove" 
            MouseDown="Border_MouseDown">
      <Border.ToolTip>
        <ToolTip x:Name="AbnormalTooltip"
                 BorderBrush="Tomato"
                 BorderThickness="1">
          <ToolTip.Content>
            <MultiBinding Converter="{converter:DateRangeText}"
                          Mode="OneWay">
              <Binding Path="StartItem.Time"/>
              <Binding Path="StopItem.Time"/>
            </MultiBinding>
          </ToolTip.Content>          
        </ToolTip>
      </Border.ToolTip>
      <Canvas>
        <Image Height="14" 
               Margin="4"
               VerticalAlignment="Top"
               Source="{StaticResource exclamation_triangleR}"/>
        <TextBlock Foreground="Red"
                   Background="Transparent"
                   Margin="22 2 0 0">
          <TextBlock.Text>
            <MultiBinding Converter="{converter:DateRangeText}"
                          Mode="OneWay">
              <Binding Path="StartItem.Time"/>
              <Binding Path="StopItem.Time"/>
            </MultiBinding>
          </TextBlock.Text>
        </TextBlock>      
      </Canvas>
    </Border>
  </Grid>
</UserControl>
