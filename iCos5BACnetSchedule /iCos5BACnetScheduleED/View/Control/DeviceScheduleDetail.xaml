<UserControl x:Class="iCos5BACnetScheduleED.View.Control.DeviceScheduleDetail"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:converter="clr-namespace:iCos5BACnetScheduleED.View.Converter"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

  <!-- Resources -->
  <UserControl.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="../../Assets/ControlResources.xaml"/>
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </UserControl.Resources>

  <Border>
    <Grid>
      <StackPanel x:Name="DetailDriverPanel"
                  Visibility="{Binding Converter={converter:DetailDriverPanelVisibility}}">
        <Grid Margin="5 4 5 2">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
          </Grid.ColumnDefinitions>
          <Border Grid.Column="0"
                  Style="{StaticResource BorderHeader}">
            <TextBlock Text="Driver Identification"
                       Style="{StaticResource TextBlockHeader}"/>
          </Border>
          <Border Grid.Column="1"
                  Style="{StaticResource BorderContents}">
            <TextBlock Text="{Binding DriverIdentification}"
                       Style="{StaticResource TextBlockContents}"/>
          </Border>
        </Grid>
        <Grid Margin="5 2 5 2">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
          </Grid.ColumnDefinitions>
          <Border Grid.Column="0"
                  Style="{StaticResource BorderHeader}">
            <TextBlock Text="Connection Name"
                       Style="{StaticResource TextBlockHeader}"/>
          </Border>
          <Border Grid.Column="1"
                  Style="{StaticResource BorderContents}">
            <TextBlock Text="{Binding ConnectionName}"
                       Style="{StaticResource TextBlockContents}"/>
          </Border>
        </Grid>
        <Grid Margin="5 2 5 2">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
          </Grid.ColumnDefinitions>
          <Border Grid.Column="0"
                  Style="{StaticResource BorderHeader}">
            <TextBlock Text="Device Server 1 Name"
                       Style="{StaticResource TextBlockHeader}"/>
          </Border>
          <Border Grid.Column="1"
                  Style="{StaticResource BorderContents}">
            <TextBlock Text="{Binding DeviceServer1Name}"
                       Style="{StaticResource TextBlockContents}"/>
          </Border>
        </Grid>
        <Grid Margin="5 2 5 2">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
          </Grid.ColumnDefinitions>
          <Border Grid.Column="0"
                  Style="{StaticResource BorderHeader}">
            <TextBlock Text="Device Server 1 ID"
                       Style="{StaticResource TextBlockHeader}"/>
          </Border>
          <Border Grid.Column="1"
                  Style="{StaticResource BorderContents}">
            <TextBlock Text="{Binding DeviceServer1ID}"
                       Style="{StaticResource TextBlockContents}"/>
          </Border>
        </Grid>
        <Grid Margin="5 2 5 2">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
          </Grid.ColumnDefinitions>
          <Border Grid.Column="0"
                  Style="{StaticResource BorderHeader}">
            <TextBlock Text="Device Server 2 Name"
                       Style="{StaticResource TextBlockHeader}"/>
          </Border>
          <Border Grid.Column="1"
                  Style="{StaticResource BorderContents}">
            <TextBlock Text="{Binding DeviceServer2Name}"
                       Style="{StaticResource TextBlockContents}"/>
          </Border>
        </Grid>
        <Grid Margin="5 2 5 2">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
          </Grid.ColumnDefinitions>
          <Border Grid.Column="0"
                  Style="{StaticResource BorderHeader}">
            <TextBlock Text="Device Server 2 ID"
                       Style="{StaticResource TextBlockHeader}"/>
          </Border>
          <Border Grid.Column="1"
                  Style="{StaticResource BorderContents}">
            <TextBlock Text="{Binding DeviceServer2ID}"
                       Style="{StaticResource TextBlockContents}"/>
          </Border>
        </Grid>
        <Grid Margin="5 2 5 2">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
          </Grid.ColumnDefinitions>
          <Border Grid.Column="0"
                  Style="{StaticResource BorderHeader}">
            <TextBlock Text="Device Count"
                       Style="{StaticResource TextBlockHeader}"/>
          </Border>
          <Border Grid.Column="1"
                  Style="{StaticResource BorderContents}">
            <TextBlock Text="{Binding BACnetDevices.Count}"
                       Style="{StaticResource TextBlockContents}"/>
          </Border>
        </Grid>
      </StackPanel>
      <StackPanel x:Name="DetailDevicePanel"
                  Visibility="{Binding Converter={converter:DetailDevicePanelVisibility}}">
        <Grid Margin="5 4 5 2">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
          </Grid.ColumnDefinitions>
          <Border Grid.Column="0"
                  Style="{StaticResource BorderHeader}">
            <TextBlock Text="Device Name"
                       Style="{StaticResource TextBlockHeader}"/>
          </Border>
          <Border Grid.Column="1"
                  Style="{StaticResource BorderContents}">
            <TextBlock Text="{Binding DeviceName}"
                       Style="{StaticResource TextBlockContents}"/>
          </Border>
        </Grid>
        <Grid Margin="5 2 5 2">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
          </Grid.ColumnDefinitions>
          <Border Grid.Column="0"
                  Style="{StaticResource BorderHeader}">
            <TextBlock Text="Device Address"
                       Style="{StaticResource TextBlockHeader}"/>
          </Border>
          <Border Grid.Column="1"
                  Style="{StaticResource BorderContents}">
            <TextBlock Text="{Binding DeviceAddress}"
                       Style="{StaticResource TextBlockContents}"/>
          </Border>
        </Grid>
        <Grid Margin="5 2 5 2">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
          </Grid.ColumnDefinitions>
          <Border Grid.Column="0"
                  Style="{StaticResource BorderHeader}">
            <TextBlock Text="Process ID"
                       Style="{StaticResource TextBlockHeader}"/>
          </Border>
          <Border Grid.Column="1"
                  Style="{StaticResource BorderContents}">
            <TextBlock Text="{Binding ProcessId}"
                       Style="{StaticResource TextBlockContents}"/>
          </Border>
        </Grid>
        <Grid Margin="5 2 5 2">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
          </Grid.ColumnDefinitions>
          <Border Grid.Column="0"
                  Style="{StaticResource BorderHeader}">
            <TextBlock Text="Schedule Count"
                       Style="{StaticResource TextBlockHeader}"/>
          </Border>
          <Border Grid.Column="1"
                  Style="{StaticResource BorderContents}">
            <TextBlock Text="{Binding ScheduleVariables.Count}"
                       Style="{StaticResource TextBlockContents}"/>
          </Border>
        </Grid>
      </StackPanel>
      <StackPanel x:Name="DetailSchedulePanel"
                  Visibility="{Binding Converter={converter:DetailSchedulePanelVisibility}}">
        <Grid Margin="5 4 5 2">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
          </Grid.ColumnDefinitions>
          <Border Grid.Column="0"
                  Style="{StaticResource BorderHeader}">
            <TextBlock Text="Instance ID"
                       Style="{StaticResource TextBlockHeader}"/>
          </Border>
          <Border Grid.Column="1"
                  Style="{StaticResource BorderContents}">
            <TextBlock Text="{Binding InstanceID}"
                       Style="{StaticResource TextBlockContents}"/>
          </Border>
        </Grid>
        <Grid Margin="5 2 5 2">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
          </Grid.ColumnDefinitions>
          <Border Grid.Column="0"
                  Style="{StaticResource BorderHeader}">
            <TextBlock Text="Weekly Variable"
                       Style="{StaticResource TextBlockHeader}"/>
          </Border>
          <Border Grid.Column="1"
                  Style="{StaticResource BorderContents}">
            <TextBlock Text="{Binding Weekly}"
                       Style="{StaticResource TextBlockContents}"/>
          </Border>
        </Grid>
        <Grid Margin="5 2 5 2">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
          </Grid.ColumnDefinitions>
          <Border Grid.Column="0"
                  Style="{StaticResource BorderHeader}">
            <TextBlock Text="Exception Variable"
                       Style="{StaticResource TextBlockHeader}"/>
          </Border>
          <Border Grid.Column="1"
                  Style="{StaticResource BorderContents}">
            <TextBlock Text="{Binding Exception}"
                       Style="{StaticResource TextBlockContents}"/>
          </Border>
        </Grid>
        <Grid Margin="5 2 5 2">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
          </Grid.ColumnDefinitions>
          <Border Grid.Column="0"
                  Style="{StaticResource BorderHeader}">
            <TextBlock Text="Function Name"
                       Style="{StaticResource TextBlockHeader}"/>
          </Border>
          <TextBox Grid.Column="1"
                   FontSize="14"
                   Text="{Binding FunctionName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                   mah:ControlsHelper.CornerRadius="0 5 5 0"
                   mah:TextBoxHelper.Watermark="함수 이름을 입력하십시오."
                   Style="{StaticResource TextBoxDefault}"/>
        </Grid>
        <Grid Margin="5 2 5 2">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
          </Grid.ColumnDefinitions>
          <Border Grid.Column="0"
                  Style="{StaticResource BorderHeader}">
            <TextBlock Text="Target Object Name"
                       Style="{StaticResource TextBlockHeader}"/>
          </Border>
          <TextBox Grid.Column="1"
                   FontSize="14"
                   Text="{Binding TargetObjectName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                   mah:ControlsHelper.CornerRadius="0 5 5 0"
                   mah:TextBoxHelper.Watermark="객체 이름을 입력하십시오."
                   Style="{StaticResource TextBoxDefault}"/>
        </Grid>
      </StackPanel>
    </Grid>
  </Border>
</UserControl>
