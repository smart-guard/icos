  <!-- Main -->
  <Border x:Name="MainBorder">
    <ScrollViewer>
      <StackPanel>
        <TextBlock Text="insite"
                   Style="{StaticResource TextBlockGroupHeader}"/>

        <!-- Active Insite Service Item -->
        <Border Height="70"
                Margin="5 4 5 2"
                Style="{StaticResource BorderConfig}">
          <Grid>
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="70"/>
              <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Image Grid.Column="0" 
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Margin="18"
                   Source="{StaticResource Bootstrap_buildingsDrawingImage}"/>
            <Grid Grid.Column="1">
              <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
              </Grid.ColumnDefinitions>
              <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                  <RowDefinition/>
                  <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" 
                           Text="insite 서비스"
                           FontSize="14"
                           Style="{StaticResource TextBlockTitle}"/>
                <TextBlock Grid.Row="1"
                           Text="insite 서비스 사용 여부를 선택하십시오."
                           FontSize="12"
                           Style="{StaticResource TextblockDesc}"/>
              </Grid>
              <Grid Grid.Column="1">
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="10 0 40 0">
                  <mah:ToggleSwitch x:Name="ActiveInsite"
                                    IsOn="{Binding ActiveInsite, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                    OffContent="끄기" 
                                    OnContent="켜기" 
                                    ContentDirection="LeftToRight"
                                    Toggled="ActiveSwitch_Toggled"/>
                </StackPanel>
              </Grid>
            </Grid>
          </Grid>
        </Border>

        <!-- Insite AWS Connection -->
        <StackPanel x:Name="ExpandStackAWS"
                    Orientation="Vertical" 
                    Height="74">
          <Border x:Name="ExpandBorderAWS"
                  Height="70"
                  MouseLeftButtonDown="ExpandConfig_MouseLeftButtonDown"
                  Style="{StaticResource BorderExpander}"
                  Opacity="{Binding IsEnabled, RelativeSource={RelativeSource Self}, Converter={converter:BoolToOpacity}}"
                  IsEnabled="{Binding IsOn, ElementName=ActiveInsite}">
            <Border x:Name="ExpandBorderBAWS"
                    Style="{StaticResource BorderExpanderB}">
              <Grid>
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="70"/>
                  <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Image Grid.Column="0" 
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Margin="18"
                       Source="{StaticResource Bootstrap_personDrawingImage}"/>
                <Grid Grid.Column="1">
                  <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                  </Grid.ColumnDefinitions>
                  <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                      <RowDefinition/>
                      <RowDefinition/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" 
                               Text="insite AWS 설정"
                               FontSize="14"
                               Style="{StaticResource TextBlockTitle}"/>
                    <TextBlock Grid.Row="1"
                               Text="insite AWS 클라우드 접속파일을 등록하십시오."
                               FontSize="12"
                               Style="{StaticResource TextblockDesc}"/>
                  </Grid>
                  <Grid Grid.Column="1">
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                Margin="10 0 10 0">
                      <Grid Width="400"
                            Margin="0 0 10 0">
                        <TextBlock Width="80" 
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"
                                   FontSize="14"
                                   Text="{Binding ConnectionInfo, Converter={converter:ConnectionInfoString}, ConverterParameter='Insite'}"/>
                      </Grid>
                      <Image x:Name="ExpandArrowAWS"
                             Height="20" Width="20"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center"
                             RenderTransformOrigin="0.5,0.5" 
                             Source="{StaticResource Bootstrap_chevron_downDrawingImage}">
                        <Image.RenderTransform>
                          <RotateTransform />
                        </Image.RenderTransform>
                      </Image>
                    </StackPanel>
                  </Grid>
                </Grid>
              </Grid>
            </Border>
          </Border>
          <Border Height="50"
                  Style="{StaticResource BorderSubItem}">
            <Grid>
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="70"/>
                <ColumnDefinition/>
              </Grid.ColumnDefinitions>
              <Image Grid.Column="0"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"
                     Margin="32 0 18 0"
                     Source="{StaticResource Bootstrap_file_earmark_lockDrawingImage}"/>
              <Grid Grid.Column="1">
                <Grid.ColumnDefinitions>
                  <ColumnDefinition/>
                  <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                  <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                  </Grid.RowDefinitions>
                  <TextBlock Grid.Row="0" 
                             Text="설정파일 선택 및 접속 테스트"
                             FontSize="14"
                             Style="{StaticResource TextBlockTitle}"/>
                  <TextBlock Grid.Row="1"
                             Text="AWS 설정파일을 등록 및 접속 테스트합니다."
                             FontSize="12"
                             Style="{StaticResource TextblockDesc}"/>
                </Grid>
                <Grid Grid.Column="1">
                  <StackPanel Orientation="Horizontal"
                              HorizontalAlignment="Right"
                              Margin="10 0 40 0">
                    <Button Content="AWS 파일 등록" 
                            Height="32" Width="128"
                            FontSize="14"
                            Margin="10 0 0 0"
                            Style="{StaticResource ButtonDefault}"
                            Click="AWSFileDialog_Click"/>
                    <Button Content="접속 테스트" 
                            Height="32" Width="128"
                            FontSize="14"
                            Margin="10 0 0 0"
                            Style="{StaticResource ButtonDefault}"
                            Click="AWSConnectionTest_Click">
                    </Button>
                  </StackPanel>
                </Grid>
              </Grid>
            </Grid>
          </Border>

          <!-- AWS Connection Info -->
          <Border Height="24"
                  Style="{StaticResource BorderSubItem}">
