<UserControl x:Class="iCos5CSPGatewayED.View.ViewValue"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:converter="clr-namespace:iCos5CSPGatewayED.View.Converter"
             mc:Ignorable="d">

  <!-- Resources -->
  <UserControl.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="../Assets/ControlResources.xaml" />
        <ResourceDictionary Source="../Assets/ClockDraw.xaml"/>
      </ResourceDictionary.MergedDictionaries>

      <!-- Expand Storyboard -->
      <Storyboard x:Key="ExpandStoryPeriod" 
                  BeginTime="00:00:00.000" 
                  Duration="00:00:00.300">
        <DoubleAnimation Storyboard.TargetName="ExpandArrowPeriod" 
                         Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)" 
                         From="0" To="180" BeginTime="00:00:00.000" Duration="00:00:00.300" />
        <DoubleAnimation Storyboard.TargetName="ExpandStackPeriod" 
                         Storyboard.TargetProperty="(FrameworkElement.Height)" 
                         From="74" 
                         To="{Binding ActualHeight, Source={x:Reference ExpandStackPeriod}}"
                         BeginTime="00:00:00.000" Duration="00:00:00.300" />
        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ExpandBorderPeriod" 
                                       Storyboard.TargetProperty="CornerRadius">
          <DiscreteObjectKeyFrame KeyTime="00:00:00.000">
            <DiscreteObjectKeyFrame.Value>
              <CornerRadius BottomLeft="0" BottomRight="0" TopLeft="3" TopRight="3" />
            </DiscreteObjectKeyFrame.Value>
          </DiscreteObjectKeyFrame>
        </ObjectAnimationUsingKeyFrames>
        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ExpandBorderBPeriod" 
                                       Storyboard.TargetProperty="CornerRadius">
          <DiscreteObjectKeyFrame KeyTime="00:00:00.300">
            <DiscreteObjectKeyFrame.Value>
              <CornerRadius BottomLeft="0" BottomRight="0" TopLeft="3" TopRight="3" />
            </DiscreteObjectKeyFrame.Value>
          </DiscreteObjectKeyFrame>
        </ObjectAnimationUsingKeyFrames>
        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ExpandBorderPeriod" 
                                       Storyboard.TargetProperty="Margin">
          <DiscreteObjectKeyFrame KeyTime="00:00:00.000">
            <DiscreteObjectKeyFrame.Value>
              <Thickness>5 2 5 0</Thickness>
            </DiscreteObjectKeyFrame.Value>
          </DiscreteObjectKeyFrame>
        </ObjectAnimationUsingKeyFrames>
      </Storyboard>
      <Storyboard x:Key="CollapseStoryPeriod"
                  BeginTime="00:00:00.000" 
                  Duration="00:00:00.300">
        <DoubleAnimation Storyboard.TargetName="ExpandArrowPeriod" 
                         Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)" 
                         From="180" To="0" BeginTime="00:00:00.000" Duration="00:00:00.300" />
        <DoubleAnimation Storyboard.TargetName="ExpandStackPeriod" 
                         Storyboard.TargetProperty="(FrameworkElement.Height)" 
                         From="{Binding Height, Source={x:Reference ExpandStackPeriod}}"
                         To="74" 
                         BeginTime="00:00:00.000" Duration="00:00:00.300" />
        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ExpandBorderPeriod" 
                                       Storyboard.TargetProperty="CornerRadius">
          <DiscreteObjectKeyFrame KeyTime="00:00:00.300">
            <DiscreteObjectKeyFrame.Value>
              <CornerRadius BottomLeft="3" BottomRight="3" TopLeft="3" TopRight="3" />
            </DiscreteObjectKeyFrame.Value>
          </DiscreteObjectKeyFrame>
        </ObjectAnimationUsingKeyFrames>
        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ExpandBorderBPeriod" 
                                       Storyboard.TargetProperty="CornerRadius">
          <DiscreteObjectKeyFrame KeyTime="00:00:00.300">
            <DiscreteObjectKeyFrame.Value>
              <CornerRadius BottomLeft="3" BottomRight="3" TopLeft="3" TopRight="3" />
            </DiscreteObjectKeyFrame.Value>
          </DiscreteObjectKeyFrame>
        </ObjectAnimationUsingKeyFrames>
        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ExpandBorderPeriod" 
                                       Storyboard.TargetProperty="Margin">
          <DiscreteObjectKeyFrame KeyTime="00:00:00.300">
            <DiscreteObjectKeyFrame.Value>
              <Thickness>5 2 5 2</Thickness>
            </DiscreteObjectKeyFrame.Value>
          </DiscreteObjectKeyFrame>
        </ObjectAnimationUsingKeyFrames>
      </Storyboard>
    </ResourceDictionary>
  </UserControl.Resources>

  <!-- Main -->
  <Border x:Name="MainBorder">
    <StackPanel>
      
      <!-- Building ID Item -->
      <Border Height="70"
              Margin="5 4 5 2"
              Style="{StaticResource BorderConfig}">
        <Grid>
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition/>
          </Grid.ColumnDefinitions>
          <Image Grid.Column="0" 
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center"
                 Margin="18"
                 Source="{StaticResource Bootstrap_buildingDrawingImage}"/>
          <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
              <ColumnDefinition/>
              <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
              <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
              </Grid.RowDefinitions>
              <TextBlock Grid.Row="0" 
                         Text="빌딩 ID"
                         FontSize="14"
                         Style="{StaticResource TextBlockTitle}"/>
              <TextBlock Grid.Row="1"
                         Text="빌딩 ID는 클라우드 탭에서만 변경 가능합니다."
                         FontSize="12"
                         Style="{StaticResource TextblockDesc}"/>
            </Grid>
            <Grid Grid.Column="1"
                  Width="400"
                  Margin="10 0 40 0">
              <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
              </Grid.ColumnDefinitions>
              <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
              </Grid.RowDefinitions>

              <Grid Grid.Column="0" Grid.Row="0"
                    Visibility="{Binding ActiveInsite, Converter={converter:BoolToVisibility}}"
                    VerticalAlignment="Bottom">
                <TextBlock Width="50" 
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           FontSize="14"
                           Text="insite :"/>
                <TextBlock Width="70" 
                           Margin="50 0 0 0" 
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           FontSize="14"
                           Visibility="{Binding IsSingleBuilding, Converter={converter:NBoolToVisibility}}"
                           Text="다중빌딩"/>
                <TextBlock Width="70" 
                           Margin="50 0 0 0" 
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           FontSize="14"
                           Visibility="{Binding IsSingleBuilding, Converter={converter:BoolToVisibility}}"
                           Text="단일빌딩"/>
                <TextBlock Margin="120 0 0 0" 
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           FontSize="14"
                           Visibility="{Binding IsSingleBuilding, Converter={converter:BoolToVisibility}}"
                           Text="{Binding BuildingID}"/>
              </Grid>

              <Grid Grid.Column="0" Grid.Row="1"
                    Visibility="{Binding ActiveInbase, Converter={converter:BoolToVisibility}}"
                    VerticalAlignment="Top">
                <TextBlock Width="50" 
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           FontSize="14"
                           Text="inbase :"/>
                <TextBlock Margin="56 0 0 0" 
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           FontSize="14"
                           Text="{Binding BuildingIDInbase}"/>
              </Grid>

              <Grid Grid.Column="1" Grid.Row="1"
                    Visibility="{Binding ActiveBEMS, Converter={converter:BoolToVisibility}}"
                    VerticalAlignment="Top">
                <TextBlock Width="50" 
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           FontSize="14"
                           Text="BEMS :"/>
                <TextBlock Margin="56 0 0 0" 
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           FontSize="14"
                           Text="{Binding BuildingIDBEMS}"/>
              </Grid>
            </Grid>
          </Grid>
        </Grid>
      </Border>

      <!-- Period Time Item -->
      <StackPanel x:Name="ExpandStackPeriod"
                  Orientation="Vertical" 
                  Height="74">
        <Border x:Name="ExpandBorderPeriod"
                Height="70"
                MouseLeftButtonDown="ExpandPeriod_MouseLeftButtonDown"
                Style="{StaticResource BorderExpander}">
          <Border x:Name="ExpandBorderBPeriod"
                  Style="{StaticResource BorderExpanderB}">
            <Grid>
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="70"/>
                <ColumnDefinition/>
              </Grid.ColumnDefinitions>
              <Image Grid.Column="0"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"
                     Margin="18"
                     Source="{StaticResource Bootstrap_clockDrawingImage}" />
              <Grid Grid.Column="1">
                <Grid.ColumnDefinitions>
                  <ColumnDefinition/>
                  <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                  <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                  </Grid.RowDefinitions>
                  <TextBlock Grid.Row="0" 
                             Text="업데이트 전송 주기"
                             FontSize="14"
                             Style="{StaticResource TextBlockTitle}"/>
                  <TextBlock Grid.Row="1"
                             Text="전송 주기를 설정하십시오."
                             FontSize="12"
                             Style="{StaticResource TextblockDesc}"/>
                </Grid>
                <Grid Grid.Column="1">
                  <StackPanel Orientation="Horizontal"
                              HorizontalAlignment="Right"
                              Margin="10 0 10 0">
                    <Grid Width="400"
                          Margin="0 0 10 0">
                      <TextBlock Width="80" 
                                 HorizontalAlignment="Left"
                                 VerticalAlignment="Center"
                                 FontSize="14"
                                 Text="{Binding Value, ElementName=PeriodTime, UpdateSourceTrigger=PropertyChanged, StringFormat=주기 : {0}분}"/>
                      <TextBlock Width="80" 
                                 Margin="80 0 0 0"
                                 HorizontalAlignment="Left"
                                 VerticalAlignment="Center"
                                 FontSize="14"
                                 Text="{Binding Value, ElementName=OffsetTime, UpdateSourceTrigger=PropertyChanged, StringFormat=간격 : {0}분}"/>
                    </Grid>
                    <Image x:Name="ExpandArrowPeriod"
                           Height="20" Width="20"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           RenderTransformOrigin="0.5,0.5" 
                           Source="{StaticResource Bootstrap_chevron_downDrawingImage}">
                      <Image.RenderTransform>
                        <RotateTransform />
                      </Image.RenderTransform>
                    </Image>
                  </StackPanel>
                </Grid>
              </Grid>
            </Grid>
          </Border>
        </Border>
        <Border Height="50"
                Style="{StaticResource BorderSubItem}">
          <Grid>
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="70"/>
              <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Image Grid.Column="0"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Margin="32 0 18 0"
                   Source="{StaticResource Bootstrap_speedometer2DrawingImage}"/>
            <Grid Grid.Column="1">
              <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
              </Grid.ColumnDefinitions>
              <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                  <RowDefinition/>
                  <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" 
                           Text="전송 간격"
                           FontSize="14"
                           Style="{StaticResource TextBlockTitle}"/>
                <TextBlock Grid.Row="1"
                           Text="주기 데이터 전송 간격을 설정 하십시오.(분)"
                           FontSize="12"
                           Style="{StaticResource TextblockDesc}"/>
              </Grid>
              <Grid Grid.Column="1">
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="10 0 40 0">
                  <mah:NumericUpDown x:Name="PeriodTime" 
                                     Height="30" Width="90"
                                     Style="{StaticResource NumericUpDownDefault}"
                                     Maximum="60"
                                     Minimum="1"
                                     Value="{Binding PeriodInterval, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                     ValueChanged="PeriodTime_ValueChanged"/>
                  <Slider Width="300"
                          Margin="10 10 0 10"
                          Orientation="Horizontal"
                          IsSnapToTickEnabled="True"
                          TickPlacement="BottomRight"
                          TickFrequency="1"
                          Maximum="60"
                          Minimum="1"
                          Value="{Binding Value, ElementName=PeriodTime, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>
              </Grid>
            </Grid>
          </Grid>
        </Border>
        <Border Height="50"
                Style="{StaticResource BorderSubItem}"
                IsEnabled="{Binding IsOn, ElementName=EnableSingleBuilding}">
          <Grid>
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="70"/>
              <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Image Grid.Column="0"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Margin="32 0 18 0"
                   Source="{StaticResource Bootstrap_clock_historyDrawingImage}"/>
            <Grid Grid.Column="1">
              <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
              </Grid.ColumnDefinitions>
              <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                  <RowDefinition/>
                  <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0"
                           Text="오프셋"
                           FontSize="14"
                           Style="{StaticResource TextBlockTitle}"/>
                <TextBlock Grid.Row="1"
                           Text="전송 시간 오프셋을 설정하십시오.(분)"
                           FontSize="12"
                           Style="{StaticResource TextblockDesc}"/>
              </Grid>
              <Grid Grid.Column="1">
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="10 0 40 0">
                  <mah:NumericUpDown x:Name="OffsetTime" 
                                     Height="30" Width="90"
                                     Style="{StaticResource NumericUpDownDefault}"
                                     Maximum="{Binding Value, ElementName=PeriodTime}"
                                     Minimum="0"
                                     Value="{Binding PeriodOffset, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                     ValueChanged="OffsetTime_ValueChanged"/>
                  <Slider Width="300"
                          Margin="10 10 0 10"
                          Orientation="Horizontal"
                          IsSnapToTickEnabled="True"
                          TickPlacement="BottomRight"
                          TickFrequency="1"
                          Maximum="{Binding Value, ElementName=PeriodTime}"
                          Minimum="0"
                          Value="{Binding Value, ElementName=OffsetTime, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>
              </Grid>
            </Grid>
          </Grid>
        </Border>
        <Border Height="210"
                Style="{StaticResource BorderSubItem}"
                IsEnabled="{Binding IsOn, ElementName=EnableSingleBuilding}">
          <Grid>
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="70"/>
              <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Image Grid.Column="0"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Margin="32 0 18 0"
                   Source="{StaticResource Bootstrap_watchDrawingImage}"/>
            <Grid Grid.Column="1">
              <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
              </Grid.ColumnDefinitions>
              <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                  <RowDefinition/>
                  <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" 
                           Text="테스트"
                           FontSize="14"
                           Style="{StaticResource TextBlockTitle}"/>
                <TextBlock Grid.Row="1"
                           Text="전송 주기를 확인합니다."
                           FontSize="12"
                           Style="{StaticResource TextblockDesc}"/>
              </Grid>
              <Grid Grid.Column="1">
                <Image Height="200" Width="440"
                       Source="{StaticResource AnalogClockAnimation2_void_frameDrawingImage}" />
                <Image x:Name="SequenceMarked" 
                       Height="200" Width="440" />
              </Grid>
            </Grid>
          </Grid>
        </Border>
      </StackPanel>

      <!-- Maximum Count Item -->
      <Border Height="70"
              Style="{StaticResource BorderConfig}">
        <Grid>
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition/>
          </Grid.ColumnDefinitions>
          <Image Grid.Column="0" 
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center"
                 Margin="18"
                 Source="{StaticResource Bootstrap_n_123DrawingImage}"/>
          <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
              <ColumnDefinition/>
              <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
              <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
              </Grid.RowDefinitions>
              <TextBlock Grid.Row="0" 
                         Text="파일당 최대 관제점 갯수"
                         FontSize="14"
                         Style="{StaticResource TextBlockTitle}"/>
              <TextBlock Grid.Row="1"
                         Text="1회 전송당 최대 관제점 갯수를 설정하십시오.(100 ~ 1000 관제점)"
                         FontSize="12"
                         Style="{StaticResource TextblockDesc}"/>
            </Grid>
            <Grid Grid.Column="1">
              <StackPanel Orientation="Horizontal"
                          HorizontalAlignment="Right"
                          Margin="10 0 40 0">
                <mah:NumericUpDown x:Name="MaximumCount" 
                                   Height="30" Width="90"
                                   Style="{StaticResource NumericUpDownDefault}"
                                   Maximum="1000"
                                   Minimum="100"
                                   Value="{Binding MaximumCount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                <Slider Width="300"
                        Margin="10 10 0 10"
                        Orientation="Horizontal"
                        IsSnapToTickEnabled="True"
                        TickPlacement="BottomRight"
                        TickFrequency="50"
                        Maximum="1000"
                        Minimum="100"
                        Value="{Binding Value, ElementName=MaximumCount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
              </StackPanel>
            </Grid>
          </Grid>
        </Grid>
      </Border>

      <!-- Sequence Interval Item -->
      <Border Height="70"
              Style="{StaticResource BorderConfig}">
        <Grid>
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition/>
          </Grid.ColumnDefinitions>
          <Image Grid.Column="0" 
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center"
                 Margin="18"
                 Source="{StaticResource Bootstrap_speedometer2DrawingImage}"/>
          <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
              <ColumnDefinition/>
              <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
              <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
              </Grid.RowDefinitions>
              <TextBlock Grid.Row="0" 
                         Text="파일 전송 간격"
                         FontSize="14"
                         Style="{StaticResource TextBlockTitle}"/>
              <TextBlock Grid.Row="1"
                         Text="다수의 파일 전송 시 간격을 설정하십시오.(0 ~ 500 밀리초)"
                         FontSize="12"
                         Style="{StaticResource TextblockDesc}"/>
            </Grid>
            <Grid Grid.Column="1">
              <StackPanel Orientation="Horizontal"
                          HorizontalAlignment="Right"
                          Margin="10 0 40 0">
                <mah:NumericUpDown x:Name="SequenceInterval" 
                                   Height="30" Width="90"
                                   Style="{StaticResource NumericUpDownDefault}"
                                   Maximum="500"
                                   Minimum="0"
                                   Value="{Binding SequenceInterval, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                <Slider Width="300"
                        Margin="10 10 0 10"
                        Orientation="Horizontal"
                        IsSnapToTickEnabled="True"
                        TickPlacement="BottomRight"
                        TickFrequency="50"
                        Maximum="500"
                        Minimum="0"
                        Value="{Binding Value, ElementName=SequenceInterval, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
              </StackPanel>
            </Grid>
          </Grid>
        </Grid>
      </Border>

      <!-- Initial Update Item -->
      <Border Height="70"
              Style="{StaticResource BorderConfig}">
        <Grid>
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition/>
          </Grid.ColumnDefinitions>
          <Image Grid.Column="0" 
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center"
                 Margin="18"
                 Source="{StaticResource Bootstrap_arrow_bar_rightDrawingImage}"/>
          <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
              <ColumnDefinition/>
              <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
              <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
              </Grid.RowDefinitions>
              <TextBlock Grid.Row="0" 
                         Text="시작시 관제점 업데이트"
                         FontSize="14"
                         Style="{StaticResource TextBlockTitle}"/>
              <TextBlock Grid.Row="1"
                         Text="시작시 관제점 업데이트 진행 여부를 선택하십시오."
                         FontSize="12"
                         Style="{StaticResource TextblockDesc}"/>
            </Grid>
            <Grid Grid.Column="1">
              <StackPanel Orientation="Horizontal"
                          HorizontalAlignment="Right"
                          Margin="10 0 40 0">
                <mah:ToggleSwitch IsOn="{Binding InitialUpdate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                  OffContent="전송주기에 시작" 
                                  OnContent="즉시 시작" 
                                  ContentDirection="LeftToRight"/>
              </StackPanel>
            </Grid>
          </Grid>
        </Grid>
      </Border>

      <!-- Update Time Type -->
      <Border Height="70"
              Style="{StaticResource BorderConfig}">
        <Grid>
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition/>
          </Grid.ColumnDefinitions>
          <Image Grid.Column="0" 
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center"
                 Margin="18"
                 Source="{StaticResource Bootstrap_circle_squareDrawingImage}"/>
          <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
              <ColumnDefinition/>
              <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
              <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
              </Grid.RowDefinitions>
              <TextBlock Grid.Row="0" 
                         Text="업데이트 시간 타입"
                         FontSize="14"
                         Style="{StaticResource TextBlockTitle}"/>
              <TextBlock Grid.Row="1"
                         Text="관제점 업데이트 기준 시간 종류를 선택하십시오."
                         FontSize="12"
                         Style="{StaticResource TextblockDesc}"/>
            </Grid>
            <Grid Grid.Column="1">
              <StackPanel Orientation="Horizontal"
                          HorizontalAlignment="Right"
                          Margin="10 0 40 0">
                <mah:ToggleSwitch IsOn="{Binding UseDriverUpdateTime, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                  OffContent="스카다 시간" 
                                  OnContent="드라이버 시간" 
                                  ContentDirection="LeftToRight"/>
              </StackPanel>
            </Grid>
          </Grid>
        </Grid>
      </Border>
    </StackPanel>
  </Border>
</UserControl>
